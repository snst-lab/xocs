{
  "name": "xocs",
  "version": "0.0.9",
  "private": false,
  "description": "Minimal and lightweight task runner for front-end web development",
  "keywords": [
    "frontend",
    "web",
    "task",
    "watch",
    "build",
    "compile",
    "css",
    "js",
    "imagemin",
    "ftp",
    "browser-sync"
  ],
  "author": "Shunsuke Tanaka",
  "license": "MIT",
  "engines": {
    "node": ">=10.13.0"
  },
  "files": [
    "@types",
    "bin",
    "interfaces",
    "modules",
    "scripts",
    "utils",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "xocs": "bin/cli.js"
  },
  "scripts": {
    "build": "npx tsc && npx tsc-alias & cp -a src/scripts/. dist/scripts/",
    "cli:ts": "ts-node dist/bin/cli.js -p xocs.test.ts",
    "cli:js": "node dist/bin/cli.js -p xocs.test.js",
    "test": "npm run build && npx mocha -r ts-node/register -r tsconfig-paths/register --timeout 30000 test/index.ts",
    "prepublishOnly": "make prepublish",
    "postpublish": "make postpublish",
    "preinstall": "",
    "postinstall": "node scripts/postinstall.js"
  },
  "dependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/browser-sync": "^2.26.1",
    "@types/ftp": "^0.3.31",
    "@types/imagemin-gifsicle": "^7.0.0",
    "@types/imagemin-mozjpeg": "^8.0.0",
    "@types/imagemin-svgo": "^8.0.1",
    "@types/imagemin-webp": "^5.1.1",
    "@types/node": "^14.14.35",
    "app-root-path": "^3.0.0",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "chalk": "^4.1.0",
    "chokidar": "^3.5.1",
    "dotenv": "^8.2.0",
    "ftp": "^0.3.10",
    "glob": "^7.1.6",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^9.0.0",
    "imagemin-webp": "^6.0.0",
    "ora": "^5.4.0",
    "postcss": "^8.2.8",
    "postcss-cli": "^8.3.1",
    "sass": "^1.32.8"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "mocha": "^8.3.2",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-recess-order": "^2.3.0",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.2.8",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  }
}
