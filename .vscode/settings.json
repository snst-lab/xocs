{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[css]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[scss]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": true
    }
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
  },
  "css.validate": false,
  "scss.validate": false,
  "files.exclude": {
    "node_modules": true,
    "dist": false,
    "src": false
  },
  "search.exclude": {
    ".archive": true,
    "node_modules": true,
    "dist": true,
    "src": false
  },
  "files.associations": {
    "**/.archive/**/*": "plaintext"
  }
}
