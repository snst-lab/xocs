{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "strict": true,
    "skipLibCheck": false,
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "pretty": false,
    "newLine": "lf",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@types/*": ["@types/*"],
      "@modules/*": ["modules/*"],
      "@interfaces/*": ["interfaces/*"],
      "@utils/*": ["utils/*"]
    },
    "types": [
      "node",
      "ftp",
      "browser-sync",
      "imagemin-mozjpeg",
      "imagemin-svgo",
      "imagemin-gifsicle",
      "imagemin-webp",
      "mocha"
    ]
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"],
  "exclude": ["./node_modules/*", "./test/**.spec.ts"]
}
